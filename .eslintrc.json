{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": ["error", {
            "allow": ["warn", "error", "log"]
        }],
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "no-trailing-spaces": "error",
        "eol-last": "error"
    }
}