{
    "env": {
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": ["error", {
        "allow": ["warn", "error", "log"]
        }],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "no-trailing-spaces":"error",
        "eol-last": "error"
    }
}
